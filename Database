DROP DATABASE IF EXISTS krautundrueben;
CREATE DATABASE IF NOT EXISTS krautundrueben;
USE krautundrueben;

CREATE TABLE MESSWERTE (
    ID                  INTEGER AUTO_INCREMENT NOT NULL,
    DATUM               VARCHAR(15),
    ZEIT                VARCHAR(15),
    LUFTFEUCHTIGKEIT    INTEGER,
    TEMPERATUR          INTEGER,
    WASSERSTAND         INTEGER,
    BODENFEUCHTIGKEIT   INTEGER,
    PRIMARY KEY (ID)
    );

ALTER TABLE MESSWERTE ADD PRIMARY KEY (ID);
DECIMAL(3,2)
COMMIT WORK;
